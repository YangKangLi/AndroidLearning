    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="cn.com.ziquan.android.learning.lesson4.section5.Section5Activity">

    <fragment
        android:id="@+id/fragment_news_list"
        android:name="cn.com.ziquan.android.learning.lesson4.section5.NewsListFragment"
        android:layout_width="0dp"
